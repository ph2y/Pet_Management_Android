<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="fragment"
            type="com.sju18001.petmanagement.ui.login.createAccount.CreateAccountUserInfoFragment" />
        <variable
            name="viewModel"
            type="com.sju18001.petmanagement.ui.login.createAccount.CreateAccountViewModel" />
    </data>
    
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center"
        android:windowSoftInputMode="adjustResize"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:text="@string/user_info_title"
                android:textSize="32sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:orientation="vertical">

                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_phone_24"
                    android:drawablePadding="4dp"
                    android:inputType="phone"
                    android:hint="@string/phone_hint"
                    android:text="@={viewModel.phone}"
                    android:theme="@style/onSelectedThemeCarrot"/>

                <TextView
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:visibility="@{!viewModel.isPhoneValid &amp;&amp; !viewModel.phone.empty? View.VISIBLE: View.GONE}"
                    android:text="@string/phone_message"
                    android:textSize="12sp"
                    android:textColor="@android:color/holo_red_dark"/>

                <TextView
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:visibility="@{viewModel.isPhoneOverlapped? View.VISIBLE: View.GONE}"
                    android:text="@string/phone_message_overlap"
                    android:textSize="12sp"
                    android:textColor="@android:color/holo_red_dark"/>

                <EditText
                    android:id="@+id/edittext_email"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:drawablePadding="4dp"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionDone"
                    android:hint="@string/email_hint"
                    android:enabled="@{!viewModel.isApiLoading &amp;&amp; !viewModel.isEmailVerified}"
                    android:text="@={viewModel.email}"
                    android:theme="@style/onSelectedThemeCarrot"/>

                <TextView
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:visibility="@{!viewModel.isEmailValid &amp;&amp; !viewModel.email.empty? View.VISIBLE: View.GONE}"
                    android:text="@string/email_message"
                    android:textSize="12sp"
                    android:textColor="@android:color/holo_red_dark"/>

                <TextView
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:visibility="@{viewModel.isEmailOverlapped? View.VISIBLE: View.GONE}"
                    android:text="@string/email_message_overlap"
                    android:textSize="12sp"
                    android:textColor="@android:color/holo_red_dark"/>

                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="108dp"
                            android:layout_height="48dp"
                            android:layout_centerInParent="true"
                            android:enabled="@{viewModel.isEmailValid &amp;&amp; !viewModel.isApiLoading &amp;&amp; !viewModel.isEmailVerified}"
                            android:text="@{viewModel.isApiLoading? null: @string/request_email_code_button}"
                            android:textSize="16sp"
                            android:onClick="@{() -> fragment.onClickRequestEmailCodeButton()}"
                            />

                        <ProgressBar
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:indeterminateTint="@color/carrot"
                            android:visibility="@{viewModel.isApiLoading? View.VISIBLE: View.GONE}" />

                    </RelativeLayout>

                    <EditText
                        android:id="@+id/edittext_authcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:hint="@string/email_code_hint"
                        android:inputType="number"
                        android:maxLength="8"
                        android:enabled="@{!viewModel.isEmailVerified}"
                        android:text="@={viewModel.emailCode}"
                        android:textSize="16sp"
                        android:background="@drawable/edit_text_rectangle"
                        android:theme="@style/onSelectedThemeCarrot"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="4dp"
                        android:text="@string/email_message_code_valid"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="12sp"
                        android:visibility="@{viewModel.isEmailVerified? View.VISIBLE: View.GONE}" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="4dp"
                        android:visibility="@{viewModel.chronometerBase != 0L &amp;&amp; !viewModel.isEmailVerified? View.VISIBLE: View.GONE}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/carrot"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:text="@string/email_code_chronometer_label"/>

                        <Chronometer
                            android:id="@+id/chronometer_authcode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingStart="4dp"
                            android:countDown="true"
                            android:textColor="@color/carrot"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    
</layout>