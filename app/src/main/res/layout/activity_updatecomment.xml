<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="activity"
            type="com.sju18001.petmanagement.ui.community.comment.updateComment.UpdateCommentActivity" />
        <variable
            name="viewModel"
            type="com.sju18001.petmanagement.ui.community.comment.updateComment.UpdateCommentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:windowSoftInputMode="adjustResize"
        tools:context=".ui.community.comment.updateComment.UpdateCommentActivity">

        <RelativeLayout
            android:id="@+id/relativelayout_backbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/imagebutton_backbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_arrow_back_36"
                android:background="?selectableItemBackgroundBorderless"
                android:onClick="@{() -> activity.onClickBackButton()}"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imagebutton_backbutton"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/update_comment_title"/>
        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/relativelayout_backbutton"
            app:layout_constraintStart_toStartOf="parent">

            <EditText
                android:id="@+id/edittext_updatecomment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint="@string/comment_input_hint"
                android:padding="10dp"
                android:textSize="16sp"
                android:gravity="top"
                android:minLines="2"
                android:maxLines="8"
                android:inputType="textMultiLine"
                android:theme="@style/onSelectedThemeCarrot"
                android:imeOptions="actionSend"
                android:text="@={viewModel.contents}"
                android:enabled="@{!viewModel.isApiLoading}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/edittext_updatecomment"
                app:layout_constraintEnd_toEndOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/confirm"
                        android:visibility="@{viewModel.isApiLoading? View.GONE: View.VISIBLE}"
                        android:onClick="@{() -> activity.updateComment()}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <ProgressBar
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="@{viewModel.isApiLoading? View.VISIBLE: View.GONE}"
                        android:indeterminateTint="@color/carrot"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
