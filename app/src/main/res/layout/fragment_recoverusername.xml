<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="fragment"
            type="com.sju18001.petmanagement.ui.login.recover.RecoverUsernameFragment" />
        <variable
            name="viewModel"
            type="com.sju18001.petmanagement.ui.login.recover.RecoverViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/framelayout_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="@{viewModel.isUsernameShowing? View.GONE: View.VISIBLE}"
                    >
                    <EditText
                        android:id="@+id/edittext_email"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:inputType="textEmailAddress"
                        android:hint="이메일을 입력하세요."
                        android:backgroundTint="@color/border_line"
                        android:theme="@style/onSelectedThemeCarrot"
                        android:enabled="@{!viewModel.isApiLoading}"
                        android:text="@={viewModel.emailForRecoverUsername}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                    <TextView
                        android:id="@+id/textview_emailmessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email_message"
                        android:textSize="12sp"
                        android:textColor="@android:color/holo_red_dark"
                        android:visibility="@{viewModel.isEmailForRecoverUsernameValid || viewModel.emailForRecoverUsername.empty? View.GONE: View.VISIBLE}"
                        app:layout_constraintTop_toBottomOf="@id/edittext_email"
                        app:layout_constraintStart_toStartOf="@id/edittext_email"
                        />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/textview_emailmessage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        <Button
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.isApiLoading? null: @string/recover_username}"
                            android:enabled="@{!viewModel.isApiLoading &amp;&amp; viewModel.isEmailForRecoverUsernameValid}"
                            android:onClick="@{() -> fragment.recoverUsername()}"/>
                        <ProgressBar
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:indeterminateTint="@color/carrot"
                            android:layout_centerInParent="true"
                            android:visibility="@{viewModel.isApiLoading? View.VISIBLE: View.GONE}"
                            />
                    </RelativeLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="@{viewModel.isUsernameShowing? View.VISIBLE: View.GONE}"
                    >
                    <TextView
                        android:id="@+id/textview_resulttitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:text="@string/recover_username_result_title"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                    <TextView
                        android:id="@+id/textview_resultcontents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="@string/recover_username_result_description"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/textview_resulttitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/sunflower"
                        android:text="@{viewModel.username}"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/textview_resultcontents"
                        app:layout_constraintStart_toStartOf="@id/textview_resultcontents"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </FrameLayout>

</layout>
