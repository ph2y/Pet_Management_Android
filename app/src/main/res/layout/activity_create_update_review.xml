<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="activity"
            type="com.sju18001.petmanagement.ui.map.review.createUpdateReview.CreateUpdateReviewActivity" />
        <variable
            name="viewModel"
            type="com.sju18001.petmanagement.ui.map.review.createUpdateReview.CreateUpdateReviewViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:onClick="@{() -> activity.onBackButtonClicked()}"
                android:src="@drawable/ic_baseline_arrow_back_36"
                android:background="?selectableItemBackgroundBorderless"/>

            <TextView
                android:id="@+id/text_back_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/button_back"
                android:text="@{viewModel.fragmentType == 0 ? @string/create_review_title : @string/update_review_title}"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_contents"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/layout_back_button"
            app:layout_constraintBottom_toTopOf="@id/confirm_button_layout">

            <LinearLayout
                android:id="@+id/layout_stars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/border_bottom"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                app:layout_constraintTop_toTopOf="parent"
                >
                <ImageView
                    android:id="@+id/image_star1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@{viewModel.rating >= 1 ? @drawable/ic_baseline_star_16 : @drawable/ic_baseline_star_border_16}"
                    android:onClick="@{() -> activity.onStarImageClicked(1)}"
                    android:clickable="@{!viewModel.isApiCalling}"
                    />
                <ImageView
                    android:id="@+id/image_star2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@{viewModel.rating >= 2 ? @drawable/ic_baseline_star_16 : @drawable/ic_baseline_star_border_16}"
                    android:onClick="@{() -> activity.onStarImageClicked(2)}"
                    android:clickable="@{!viewModel.isApiCalling}"
                    />
                <ImageView
                    android:id="@+id/image_star3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@{viewModel.rating >= 3 ? @drawable/ic_baseline_star_16 : @drawable/ic_baseline_star_border_16}"
                    android:onClick="@{() -> activity.onStarImageClicked(3)}"
                    android:clickable="@{!viewModel.isApiCalling}"
                    />
                <ImageView
                    android:id="@+id/image_star4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@{viewModel.rating >= 4 ? @drawable/ic_baseline_star_16 : @drawable/ic_baseline_star_border_16}"
                    android:onClick="@{() -> activity.onStarImageClicked(4)}"
                    android:clickable="@{!viewModel.isApiCalling}"
                    />
                <ImageView
                    android:id="@+id/image_star5"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@{viewModel.rating >= 5 ? @drawable/ic_baseline_star_16 : @drawable/ic_baseline_star_border_16}"
                    android:onClick="@{() -> activity.onStarImageClicked(5)}"
                    android:clickable="@{!viewModel.isApiCalling}"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/post_edit_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:gravity="top"
                android:hint="@string/write_review_hint"
                android:inputType="textMultiLine|textNoSuggestions"
                android:maxLength="10000"
                android:theme="@style/onSelectedThemeCarrot"
                android:background="@android:color/transparent"
                android:text="@={viewModel.contents}"
                android:enabled="@{!viewModel.isApiCalling}"
                app:layout_constraintTop_toBottomOf="@id/layout_stars"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{viewModel.isApiCalling ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/confirm_button_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <Button
                android:id="@+id/confirm_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="@{(!viewModel.isApiCalling &amp;&amp; (viewModel.rating != 0 &amp;&amp; viewModel.contents.length() != 0)) ? true : false}"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/complete"
                android:textSize="18sp"
                app:cornerRadius="0dp" />

            <ProgressBar
                android:id="@+id/create_update_review_progress_bar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:indeterminateTint="@color/carrot"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>