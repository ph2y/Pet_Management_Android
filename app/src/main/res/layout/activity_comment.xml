<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="activity"
            type="com.sju18001.petmanagement.ui.community.comment.CommentActivity" />
        <variable
            name="viewModel"
            type="com.sju18001.petmanagement.ui.community.comment.CommentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:windowSoftInputMode="adjustResize"
        tools:context=".ui.community.comment.CommentActivity">

        <RelativeLayout
            android:id="@+id/relativelayout_backbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/imagebutton_backbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_arrow_back_36"
                android:background="?selectableItemBackgroundBorderless"
                android:onClick="@{() -> activity.onClickBackButton()}"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imagebutton_backbutton"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/comment"/>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@id/constraintlayout_commentinput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/relativelayout_backbutton">

            <TextView
                android:id="@+id/textview_emptycomment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/empty_comment_list_notification"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:visibility="gone" />
        </FrameLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swiperefreshlayout_comment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/relativelayout_backbutton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ad_view">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_comment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false"/>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- TODO: change adUnitId (current: sample ad unit id) -->
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
            ads:adSize="BANNER"
            android:id="@+id/ad_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:layout_constraintStart_toStartOf="parent"
            ads:layout_constraintBottom_toTopOf="@id/constraintlayout_reply"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintlayout_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/border_line"
            app:layout_constraintBottom_toTopOf="@id/constraintlayout_commentinput"
            app:layout_constraintStart_toStartOf="parent"
            >
            <TextView
                android:id="@+id/textview_replynickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.replyNickname}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="님에게 답글을 남깁니다."
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/textview_replynickname"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_cancel_24"
                android:background="@android:color/transparent"
                android:onClick="@{() -> activity.onClickReplyCancelButton()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintlayout_commentinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleimageview_profile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_account_circle_28"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/carrot"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/edittext_comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="@string/comment_input_hint"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="@={viewModel.contents}"
                android:textSize="16sp"
                android:maxLines="8"
                android:inputType="textMultiLine"
                android:theme="@style/onSelectedThemeCarrot"
                android:imeOptions="actionSend"
                android:enabled="@{!viewModel.isApiLoading}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/circleimageview_profile"
                app:layout_constraintEnd_toStartOf="@id/relativelayout_createcomment"
                />
            <RelativeLayout
                android:id="@+id/relativelayout_createcomment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageButton
                    android:id="@+id/imagebutton_createcomment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_baseline_send_28"
                    android:visibility="@{viewModel.isApiLoading? View.GONE: View.VISIBLE}"
                    android:onClick="@{() -> activity.onClickCreateCommentButton()}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ProgressBar
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:visibility="@{viewModel.isApiLoading? View.VISIBLE: View.GONE}"
                    android:indeterminateTint="@color/carrot"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>