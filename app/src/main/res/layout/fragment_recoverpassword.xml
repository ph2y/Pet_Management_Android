<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="fragment"
            type="com.sju18001.petmanagement.ui.login.recover.RecoverPasswordFragment" />
        <variable
            name="viewModel"
            type="com.sju18001.petmanagement.ui.login.recover.RecoverViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/framelayout_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="@{viewModel.recoverPasswordPhase == 0? View.VISIBLE: View.GONE}"
                    >
                    <EditText
                        android:id="@+id/edittext_email"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:inputType="textEmailAddress"
                        android:hint="이메일을 입력하세요."
                        android:enabled="@{!viewModel.isApiLoading}"
                        android:text="@={viewModel.emailForRecoverPassword}"
                        android:backgroundTint="@color/border_line"
                        android:theme="@style/onSelectedThemeCarrot"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                    <TextView
                        android:id="@+id/textview_emailmessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email_message"
                        android:textSize="12sp"
                        android:textColor="@android:color/holo_red_dark"
                        android:visibility="@{viewModel.isEmailForRecoverPasswordValid || viewModel.emailForRecoverPassword.empty? View.GONE: View.VISIBLE}"
                        app:layout_constraintTop_toBottomOf="@id/edittext_email"
                        app:layout_constraintStart_toStartOf="@id/edittext_email"
                        />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/textview_emailmessage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <Button
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:enabled="@{viewModel.isEmailForRecoverPasswordValid &amp;&amp; !viewModel.isApiLoading}"
                            android:onClick="@{() -> fragment.sendAuthCode()}"
                            android:text="@{viewModel.isApiLoading? null: @string/recover_password_email_input_button}" />
                        <ProgressBar
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:indeterminateTint="@color/carrot"
                            android:layout_centerInParent="true"
                            android:visibility="@{viewModel.isApiLoading? View.VISIBLE: View.GONE}"
                            />
                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="@{viewModel.recoverPasswordPhase == 1? View.VISIBLE: View.GONE}"
                    >
                    <EditText
                        android:id="@+id/edittext_username"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:inputType="text"
                        android:hint="아이디를 입력하세요."
                        android:enabled="@{!viewModel.isApiLoading}"
                        android:text="@={viewModel.usernameForRecoverPassword}"
                        android:backgroundTint="@color/border_line"
                        android:theme="@style/onSelectedThemeCarrot"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                    <TextView
                        android:id="@+id/username_message"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:text="@string/id_message"
                        android:textSize="12sp"
                        android:visibility="@{viewModel.isUsernameForRecoverPasswordValid || viewModel.usernameForRecoverPassword.empty? View.GONE: View.VISIBLE}"
                        app:layout_constraintTop_toBottomOf="@id/edittext_username"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@android:color/holo_red_dark"/>
                    <EditText
                        android:id="@+id/edittext_authcode"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="8"
                        android:hint="인증코드 입력"
                        android:enabled="@{!viewModel.isApiLoading}"
                        android:text="@={viewModel.authCodeForRecoverPassword}"
                        android:backgroundTint="@color/border_line"
                        android:theme="@style/onSelectedThemeCarrot"
                        app:layout_constraintTop_toBottomOf="@id/username_message"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                    <TextView
                        android:id="@+id/textview_authcodemessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/code_message"
                        android:textSize="12sp"
                        android:textColor="@android:color/holo_red_dark"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/edittext_authcode"
                        app:layout_constraintStart_toStartOf="@id/edittext_authcode"
                        />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/textview_authcodemessage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        <Button
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:enabled="@{viewModel.isUsernameForRecoverPasswordValid}"
                            android:onClick="@{() -> fragment.recoverPassword()}"
                            android:text="@string/confirm"/>
                        <ProgressBar
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:indeterminateTint="@color/carrot"
                            android:layout_centerInParent="true"
                            android:visibility="gone"
                            />
                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="40dp"
                    android:visibility="@{viewModel.recoverPasswordPhase == 2? View.VISIBLE: View.GONE}"
                    >
                    <TextView
                        android:id="@+id/textview_resulttitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/recover_password_result_title"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="@string/recover_password_result_description"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/textview_resulttitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </FrameLayout>

</layout>
