<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="fragment"
            type="com.sju18001.petmanagement.ui.setting.detailedSetting.account.UpdateAccountFragment" />
        <variable
            name="viewModel"
            type="com.sju18001.petmanagement.ui.setting.detailedSetting.DetailedSettingViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/relativelayout_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:windowSoftInputMode="adjustResize"
        tools:context=".ui.setting.SettingFragment">

        <RelativeLayout
            android:id="@+id/relativelayout_backbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/pumpkin"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/imagebutton_backbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:enabled="@{!viewModel.isApiLoading}"
                android:onClick="@{() -> fragment.onClickBackButton()}"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_baseline_arrow_back_36_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/imagebutton_backbutton"
                android:text="@string/account"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:enabled="true"
                    android:focusable="true"
                    android:onClick="@{() -> fragment.onClickConfirmButton()}"
                    android:padding="4dp"
                    android:visibility="@{viewModel.isApiLoading? View.GONE: View.VISIBLE}"
                    android:text="@string/save"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:indeterminateTint="@color/carrot"
                    android:visibility="@{viewModel.isApiLoading? View.VISIBLE: View.GONE}" />
            </RelativeLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/relativelayout_backbutton"
            android:layout_above="@id/ad_view"
            android:background="@drawable/pet_info_layout_background">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">

                <LinearLayout
                    android:id="@+id/linearlayout_photoandnickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="30dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border_bottom"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/linearlayout_accountinfo">

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/circleimageview_accountphoto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@android:color/transparent"
                            app:civ_border_color="@color/carrot"
                            app:civ_border_width="2dp"
                            tools:srcCompat="@drawable/ic_baseline_account_circle_36" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/circleimageview_accountphotoinput"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:enabled="@{!viewModel.isApiLoading}"
                            android:onClick="@{() -> fragment.onClickAccountPhotoInput()}"
                            android:src="@drawable/ic_baseline_add_photo_alternate_48"
                            app:civ_circle_background_color="@color/pumpkin" />
                    </RelativeLayout>

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:padding="8dp"
                        android:text="@={viewModel.nickname}"
                        android:textSize="22sp"
                        android:enabled="@{!viewModel.isApiLoading}"
                        android:background="@drawable/border_with_radius_8"
                        android:hint="@string/nickname_hint"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:maxLength="10"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayout_accountinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/linearlayout_photoandnickname"
                    app:layout_constraintBottom_toTopOf="@id/linearlayout_logoutanddelete"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="20dp"
                        android:background="@drawable/border_bottom">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/phone_hint"/>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/update_input_height">

                                <TextView
                                    android:id="@+id/textview_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:maxLength="13"
                                    android:padding="8dp"
                                    android:text="@{viewModel.phone}"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:inputType="phone"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    tools:text="010-1111-1111" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/email_hint"/>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/update_input_height">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="8dp"
                                    android:inputType="textEmailAddress"
                                    android:text="@{viewModel.email}"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    tools:text="first@gmail.com" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pw_hint"/>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/update_input_height"
                                android:layout_marginTop="8dp">

                                <EditText
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="8dp"
                                    android:padding="8dp"
                                    android:inputType="textPassword"
                                    android:textSize="18sp"
                                    android:enabled="false"
                                    android:text="**********"
                                    android:background="@drawable/border_with_radius_8"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/button_changepassword"
                                    />

                                <Button
                                    android:id="@+id/button_changepassword"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/update_button_height"
                                    android:text="@string/change"
                                    android:textSize="16sp"
                                    android:enabled="@{!viewModel.isApiLoading}"
                                    android:onClick="@{() -> fragment.onClickChangePasswordButton()}"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:background="@drawable/border_bottom">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/marketing_hint"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Switch
                            android:id="@+id/switch_marketing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:switchMinWidth="0dp"
                            android:text=""
                            android:enabled="@{!viewModel.isApiLoading}"
                            android:checked="@={viewModel.marketing}"
                            android:thumbTextPadding="15dp"
                            android:thumb="@drawable/switch_thumb"
                            android:track="@drawable/switch_track"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayout_logoutanddelete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:orientation="horizontal"
                    android:gravity="right"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearlayout_accountinfo">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:enabled="@{!viewModel.isApiLoading}"
                        android:onClick="@{() -> fragment.onClickLogoutButton()}"
                        android:text="@string/logout" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/divider"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:enabled="@{!viewModel.isApiLoading}"
                        android:onClick="@{() -> fragment.onClickDeleteAccountButton()}"
                        android:text="@string/delete_account" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <!-- TODO: change adUnitId (current: sample ad unit id) -->
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
            ads:adSize="BANNER"
            android:id="@+id/ad_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</layout>