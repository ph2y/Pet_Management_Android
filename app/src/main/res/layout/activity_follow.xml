<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="activity"
            type="com.sju18001.petmanagement.ui.community.follow.FollowActivity" />
        <variable
            name="viewModel"
            type="com.sju18001.petmanagement.ui.community.follow.FollowViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:focusableInTouchMode="true"
        android:focusable="true">

        <RelativeLayout
            android:id="@+id/relativelayout_backbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/relativelayout_search"
            android:padding="16dp"
            android:background="?android:colorBackground">

            <ImageButton
                android:id="@+id/imagebutton_backbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:onClick="@{() -> activity.onClickBackButton()}"
                android:src="@drawable/ic_baseline_arrow_back_36"
                android:background="?selectableItemBackgroundBorderless"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imagebutton_backbutton"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/follow_menu_title"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/relativelayout_backbutton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cardview_accountinfo"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp">

            <EditText
                android:id="@+id/edittext_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_with_radius_8"
                android:drawableStart="@drawable/ic_baseline_search_24"
                android:drawablePadding="4dp"
                android:hint="@string/search_dialog_message"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLength="20"
                android:padding="12dp"
                android:enabled="@{!viewModel.isApiLoading}"
                android:text="@={viewModel.searchKeyword}"
                android:textSize="18sp"
                android:theme="@style/onSelectedThemeCarrot" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:elevation="1dp"
                android:focusable="true"
                android:enabled="@{!viewModel.isApiLoading}"
                android:visibility="@{viewModel.searchKeyword.empty? View.INVISIBLE: View.VISIBLE}"
                android:src="@drawable/ic_baseline_close_24"
                android:onClick="@{() -> activity.onClickClearKeywordButton()}"
                app:civ_border_width="0dp" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_accountinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.accountId == null? View.GONE: View.VISIBLE}"
            android:layout_margin="4dp"
            android:onClick="@{() -> activity.onClickAccountInfoCardView()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/relativelayout_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tablayout_follow"
            app:cardCornerRadius="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="6dp">

                <LinearLayout
                    android:id="@+id/linearlayout_accountinfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/button_followunfollow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="12dp"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circleimageview_photo"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/carrot"
                        android:src="@drawable/ic_baseline_account_circle_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:ellipsize="middle"
                        android:textSize="16sp"
                        android:text="@{@string/nickname_format(viewModel.accountNickname)}"
                        />

                </LinearLayout>

                <Button
                    android:id="@+id/button_followunfollow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="@{!viewModel.isApiLoading()}"
                    android:onClick="@{() -> activity.onClickFollowUnfollowButton()}"
                    app:accountId="@{viewModel.accountId}"
                    app:followerIdList="@{viewModel.followerIdList}"
                    app:layout_constraintStart_toEndOf="@id/linearlayout_accountinfo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tablayout_follow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview_accountinfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/viewpager_follow"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager_follow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tablayout_follow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ad_view"/>

        <!-- TODO: change adUnitId (current: sample ad unit id) -->
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
            ads:adSize="BANNER"
            android:id="@+id/ad_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:layout_constraintStart_toStartOf="parent"
            ads:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>