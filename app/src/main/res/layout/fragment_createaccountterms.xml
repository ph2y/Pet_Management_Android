<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="fragment"
            type="com.sju18001.petmanagement.ui.login.createAccount.CreateAccountTermsFragment" />
        <variable
            name="viewModel"
            type="com.sju18001.petmanagement.ui.login.LoginViewModel" />
    </data>
    
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:text="@string/terms_title"
                android:textSize="32sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:orientation="vertical">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_all_check_box"
                    android:checked="@{viewModel.isTermsChecked &amp;&amp; viewModel.isPrivacyChecked &amp;&amp; viewModel.isMarketingChecked}"
                    android:onClick="@{(view) -> fragment.onClickAllCheckBox(view)}"
                    android:theme="@style/onSelectedThemeCarrot"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="@={viewModel.isTermsChecked}"
                        android:onClick="@{() -> fragment.onClickCheckBox()}"
                        android:text="@string/terms_check_box"
                        android:theme="@style/onSelectedThemeCarrot"/>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_chevron_right_24"
                        android:background="?selectableItemBackgroundBorderless"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="@={viewModel.isPrivacyChecked}"
                        android:onClick="@{() -> fragment.onClickCheckBox()}"
                        android:text="@string/privacy_check_box"
                        android:theme="@style/onSelectedThemeCarrot"/>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_chevron_right_24"
                        android:background="?selectableItemBackgroundBorderless"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="@={viewModel.isMarketingChecked}"
                        android:onClick="@{() -> fragment.onClickCheckBox()}"
                        android:text="@string/marketing_check_box"
                        android:theme="@style/onSelectedThemeCarrot"/>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_chevron_right_24"
                        android:background="?selectableItemBackgroundBorderless"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    
</layout>