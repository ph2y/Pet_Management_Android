<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="fragment"
            type="com.sju18001.petmanagement.ui.map.MapFragment"/>
        <variable
            name="viewModel"
            type="com.sju18001.petmanagement.ui.map.MapViewModel"/>
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/layout_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_map_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.map.MapFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/map_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <EditText
                    android:id="@+id/search_text_input"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:inputType="text"
                    android:background="@color/white"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:imeOptions="actionSearch"
                    android:elevation="4dp"
                    android:hint="검색어를 입력하세요."
                    android:text="@={viewModel.searchText}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ImageButton
                    android:id="@+id/button_drawer"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_baseline_format_list_bulleted_24"
                    android:background="@null"
                    android:layout_marginLeft="8dp"
                    android:elevation="5dp"
                    android:onClick="@{() -> fragment.onDrawerButtonClicked()}"
                    app:layout_constraintTop_toTopOf="@id/search_text_input"
                    app:layout_constraintBottom_toBottomOf="@id/search_text_input"
                    app:layout_constraintStart_toStartOf="@id/search_text_input"
                    />

                <ImageButton
                    android:id="@+id/search_text_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_cancel_24"
                    android:background="@null"
                    android:layout_marginRight="8dp"
                    android:visibility="@{viewModel.searchText.length() == 0? View.INVISIBLE: View.VISIBLE}"
                    android:elevation="5dp"
                    android:onClick="@{() -> fragment.onSearchTextCancelClicked()}"
                    app:layout_constraintTop_toTopOf="@id/search_text_input"
                    app:layout_constraintEnd_toEndOf="@id/search_text_input"
                    app:layout_constraintBottom_toBottomOf="@id/search_text_input"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    app:layout_constraintTop_toBottomOf="@id/search_text_input"
                    app:layout_constraintStart_toStartOf="parent"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/search_shortcut_cafe"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/search_shortcut_background"
                        android:elevation="2dp"
                        android:clickable="true"
                        android:onClick="@{() -> fragment.doSearch(fragment.CAFE_KEYWORD)}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_local_cafe_16"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:textSize="14sp"
                            android:text="@string/cafe"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/search_shortcut_grooming"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/search_shortcut_background"
                        android:elevation="2dp"
                        android:clickable="true"
                        android:onClick="@{() -> fragment.doSearch(fragment.GROOMING_KEYWORD)}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/search_shortcut_cafe"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_content_cut_16"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:textSize="14sp"
                            android:text="@string/grooming"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/search_shortcut_supply"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/search_shortcut_background"
                        android:elevation="2dp"
                        android:clickable="true"
                        android:onClick="@{() -> fragment.doSearch(fragment.SUPPLY_KEYWORD)}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/search_shortcut_grooming"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_shopping_basket_16"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:textSize="14sp"
                            android:text="@string/shop"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/search_shortcut_hospital"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/search_shortcut_background"
                        android:elevation="2dp"
                        android:clickable="true"
                        android:onClick="@{() -> fragment.doSearch(fragment.HOSPITAL_KEYWORD)}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/search_shortcut_supply"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_local_hospital_16"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:textSize="14sp"
                            android:text="@string/hospital"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/current_location_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_my_location_24"
                android:layout_margin = "16dp"
                android:backgroundTint="@color/white"
                android:onClick="@{() -> fragment.setMapCenterPointToCurrentLocation()}"
                app:tint="@color/black"
                app:borderWidth="0dp"
                app:layout_constraintBottom_toTopOf="@id/place_card"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <!-- TODO: onClick에서 1를 place id로 변경 after Place DAO update -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/place_card"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/border"
                android:padding="16dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:onClick="@{() -> fragment.onPlaceCardClicked(1)}"
                app:layout_constraintBottom_toBottomOf="parent"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/place_card_texts"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    app:layout_constraintTop_toTopOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/place_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/place_distance"
                        app:layout_constraintHorizontal_chainStyle="spread_inside">
                        <TextView
                            android:id="@+id/place_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:singleLine="true"
                            android:text="@{viewModel.placeCard.place.place_name}"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/place_category_name"
                            />
                        <TextView
                            android:id="@+id/place_category_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginStart="8dp"
                            android:text="@{viewModel.placeCard.place.category_group_name}"
                            app:layout_constraintStart_toEndOf="@id/place_name"
                            app:layout_constraintBottom_toBottomOf="@id/place_name"
                            app:layout_constraintEnd_toEndOf="parent"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:id="@+id/place_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginStart="8dp"
                        android:text="@{@string/distance_text(viewModel.placeCard.place.distance)}"
                        android:textColor="@{fragment.getPlaceDistanceTextColor(viewModel.placeCard.place.distance)}"
                        app:layout_constraintStart_toEndOf="@id/place_name_layout"
                        app:layout_constraintBottom_toBottomOf="@id/place_name_layout"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/place_rating"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/place_card_texts"
                    >
                    <TextView
                        android:id="@+id/text_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="4.3"
                        android:textColor="@color/alizarin"/>
                    <ImageView
                        android:id="@+id/image_star1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:src="@drawable/ic_baseline_star_16"
                        />
                    <ImageView
                        android:id="@+id/image_star2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_star_16"
                        />
                    <ImageView
                        android:id="@+id/image_star3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_star_16"
                        />
                    <ImageView
                        android:id="@+id/image_star4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_star_16"
                        />
                    <ImageView
                        android:id="@+id/image_star5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_star_16"
                        />
                    <TextView
                        android:id="@+id/text_review_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="(16)"/>
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/place_card_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/place_rating">
                    <ImageButton
                        android:id="@+id/pathfinding_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_swap_calls_20"
                        android:background="@drawable/border"
                        android:onClick="@{() -> fragment.onPathfindingButtonClicked(viewModel.placeCard.place.id)}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/call_button"
                        app:layout_constraintHorizontal_weight="1"
                        />
                    <ImageButton
                        android:id="@+id/call_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_call_20"
                        android:background="@drawable/border"
                        android:visibility="@{viewModel.placeCard.place.phone.length() == 0? View.GONE:View.VISIBLE}"
                        android:onClick="@{() -> fragment.onCallButtonClicked(viewModel.placeCard.place)}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/pathfinding_button"
                        app:layout_constraintRight_toLeftOf="@+id/share_button"
                        app:layout_constraintHorizontal_weight="1"
                        />
                    <ImageButton
                        android:id="@+id/share_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_share_20"
                        android:background="@drawable/border"
                        android:onClick="@{() -> fragment.onShareButtonClicked(viewModel.placeCard.place)}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/call_button"
                        app:layout_constraintRight_toLeftOf="@id/bookmark_button"
                        app:layout_constraintHorizontal_weight="1"
                        />
                    <ImageButton
                        android:id="@+id/bookmark_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@{viewModel.placeCard.isBookmarked? @drawable/ic_baseline_bookmark_20: @drawable/ic_baseline_bookmark_border_20}"
                        android:background="@drawable/border"
                        android:onClick="@{() -> fragment.onBookmarkButtonClicked(viewModel.placeCard.place)}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/share_button"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">
                    <ImageView
                        android:id="@+id/image_bookmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_bookmark_border_36"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:text="북마크"
                        android:layout_marginLeft="4dp"
                        app:layout_constraintTop_toTopOf="@id/image_bookmark"
                        app:layout_constraintBottom_toBottomOf="@id/image_bookmark"
                        app:layout_constraintStart_toEndOf="@id/image_bookmark"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_bookmark_tree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/image_bookmark"/>

                    <TextView
                        android:id="@+id/text_empty_bookmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/empty_bookmark"
                        android:gravity="center_horizontal"
                        android:visibility="gone"
                        android:layout_marginTop="36dp"
                        android:layout_marginBottom="36dp"
                        app:layout_constraintTop_toBottomOf="@id/image_bookmark"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="36dp"
                        android:layout_marginBottom="36dp"
                        android:visibility="@{viewModel.isBookmarkFetched? View.GONE: View.VISIBLE}"
                        app:layout_constraintTop_toBottomOf="@id/image_bookmark"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>
        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>

</layout>