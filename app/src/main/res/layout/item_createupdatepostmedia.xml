<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="adapter"
            type="com.sju18001.petmanagement.ui.community.post.createUpdatePost.CreateUpdatePostMediaAdapter" />
        <variable
            name="holder"
            type="com.sju18001.petmanagement.ui.community.post.createUpdatePost.CreateUpdatePostMediaAdapter.ViewHolder" />
    </data>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="4dp">

        <ImageView
            android:id="@+id/imageview_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="12dp"/>

        <ImageView
            android:id="@+id/imageview_deletebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:onClick="@{() -> adapter.onClickDeleteButton(holder)}"
            android:src="@drawable/ic_baseline_cancel_24"/>

    </RelativeLayout>

</layout>