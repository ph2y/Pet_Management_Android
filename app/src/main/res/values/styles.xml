<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="onSelectedThemeCarrot">
        <item name="colorControlActivated">@color/carrot</item>
        <item name="android:textColorHighlight">#CCE67E22</item>
    </style>

    <style name="onSelectedThemeWhite">
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColorHighlight">@color/pumpkin</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="tabLayoutPumpkin" parent="Widget.Design.TabLayout">
        <item name="android:textSize">16sp</item>
        <item name="tabBackground">@drawable/tab_layout_pumpkin</item>
        <item name="tabIndicatorColor">@color/sunflower</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextColor">@color/white</item>
    </style>
</resources>